<h1>Listing places</h1>

<table>
  <tr>
    <th>Lat</th>
    <th>Long</th>
    <th>Name</th>
    <th>Type Desc</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.lat %></td>
    <td><%= place.long %></td>
    <td><%= place.name %></td>
    <td><%= place.type_desc %></td>
    <td><%= place.tags %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

